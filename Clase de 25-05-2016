CREATE TABLE EMPLEADO (ID_EMPLEADO INTEGER, 
NOMBRE_EMPLEADO VARCHAR2 (30),  
SUELDO_BASE FLOAT, FECHA_CONTRATACION DATE,
CONSTRAINT PK_ID_EMPLEADO PRIMARY KEY (ID_EMPLEADO)
);

SET SERVEROUTPUT ON; 

DECLARE 

MY_FECHA DATE;
BEGIN 
MY_FECHA:= TO_DATE ('02-MAY-2016', 'DD-MON-YYYY');
INSERT INTO EMPLEADO VALUES (3, 'JUAN',250,MY_FECHA);
DBMS_OUTPUT.PUT_LINE('SE GUARDO TU REGISTRO CON EXITO');
exception
WHEN OTHERS THEN
DBMS_OUTPUT.PUT_LINE('LO SIENTO PERO METISTE LA PATA TONTO (A)');

END;
/

SELECT *
FROM EMPLEADO;

/*
  NUEVO OBJETO DE BASE DE DATOS QUE SE LLAMA  PROCEDIMIENTO ALMACENADO
*/


CREATE OR REPLACE PROCEDURE SUMA (VALOR1 IN INTEGER, VALOR2 IN INTEGER)
AS
RESULTADO INTEGER;
BEGIN
RESULTADO:= VALOR1+VALOR2;
DBMS_OUTPUT.PUT_LINE('LA SUMA ES:' ||RESULTADO);
END;
/

BEGIN 
SUMA (5,4);
END;
/


CREATE OR REPLACE PROCEDURE SUMA 
(
  VALOR1 IN NUMBER  
, VALOR2 IN NUMBER  
) AS 
RESULTADO NUMBER;
BEGIN
 RESULTADO:=VALOR1+VALOR2;
 DBMS_OUTPUT.PUT_LINE('LA SUMA ES: '||RESULTADO);
END SUMA;
